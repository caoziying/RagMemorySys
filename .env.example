# ============================================================
# RAG_Memory 环境变量配置模板
# 复制此文件为 .env 并填入实际值
# ============================================================

# ---------- LLM / Embedding API 配置 ----------
MY_API_KEY=your_api_key_here
MY_API_BASE=https://api.chat.csu.edu.cn/v1
MY_MODEL=deepseek-v3-thinking
MY_EMB_MODEL=bge-m3
MY_EMBEDDING_MODEL=bge-m3

# ---------- Milvus 向量数据库配置 ----------
MILVUS_HOST=milvus-standalone
MILVUS_PORT=19530
MILVUS_COLLECTION=rag_memory
MILVUS_DIM=1024

# ---------- Reranker 服务配置 ----------
# Docker 网络内地址（docker-compose 中使用）
RERANKER_URL=http://tei-reranker:80/rerank

# ---------- 记忆管理配置 ----------
# 滑动窗口保留的最近对话轮数
MEMORY_WINDOW_SIZE=10
# 触发压缩的对话轮数阈值
MEMORY_COMPRESS_THRESHOLD=20

# ---------- 检索配置 ----------
# 向量检索 Top-K
RETRIEVAL_TOP_K=10
# 重排后保留数量
RERANK_TOP_N=5

# ---------- 路径配置 ----------
DATA_DIR=./data
LOG_DIR=./logs

# ---------- 服务配置 ----------
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=false
